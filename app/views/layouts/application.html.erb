<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title( yield( :title ) ) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>

  </head>

  <body>

    <%= render 'layouts/navbar' %>

    <div class="container">

      <% flash.each do |message_type, message| %>
        <%= content_tag( :div, class: "alert alert-#{message_type} alert-dismissible" ) do %>
          <%= message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <% end %>
      <% end %>

      <%= yield %>

    </div>

    <%= render 'layouts/footer' %>


    <% if Rails.env.development? %>
      <div style="position: absolute; bottom: 60px;">
        <button class="btn" type="button" data-toggle="collapse" data-target="#debugCollapse" aria-expanded="false" aria-controls="debugCollapse">
          Debug Information
        </button>
        <div class="collapse" id="debugCollapse">
          <%= debug( params ) %>
        </div>
      </div>
    <% end %>

  </body>
</html>