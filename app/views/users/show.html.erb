<% provide( :title, @user.name ) %>

<div class="span3 well">
  <center>
    <%= gravatar_tag( @user, size: 140 ) %>
    <h1><%= @user.name %></h1>
    <em><%= @user.email %></em>
    <% if admin? && !current_user?( @user ) %>
      <br>
      <%= link_to "Delete User", @user, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
	</center>
</div>

<% if @bands.any? %>
  <h3>Listing All Bands</h3>

  <div class="list-group">
    <%= render @bands %>
  </div>

  <%= will_paginate @bands %>
<% end %>