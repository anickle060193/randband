<%= form_for current_user.band_likes.build, remote: true do |f| %>
  <div><%= hidden_field_tag :band_id, @band.id %></div>
  <div><%= hidden_field_tag :provider, @band.provider %></div>
  <div><%= hidden_field_tag :provider_id, @band.provider_id %></div>
  <%= f.submit "Like", class: "btn btn-link" %>
<% end %>