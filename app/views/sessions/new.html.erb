<% provide( :title, "Log in" ) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="panel-heading">
       <div class="panel-title text-center">
          <h1 class="title">Log in</h1>
          <hr>
        </div>
    </div>

    <%= form_for :session, url: login_path do |f| %>

      <div class="form-group">
        <%= f.label :username, class: "control-label" %>
        <%= f.text_field :username, class: "form-control", autocomplete: "username", autocapitalize: "none" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label" %>
        <%= link_to "(forgot password)", new_password_reset_path, tabindex: -1 %>
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <div class="checkbox">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me, tabindex: -1 %> Remember me on this computer
        <% end %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>

    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>

  </div>
</div>