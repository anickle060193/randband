<%= form_for @band do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name, "Band Name", class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :thumbnail, class: "control-label" %>
    <%= f.text_field :thumbnail, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :external_url, class: "control-label" %>
    <%= f.text_field :external_url, class: "form-control" %>
  </div>

  <%= f.submit yield( :button_text ), class: "btn btn-primary btn-lg btn-block" %>

<% end %>